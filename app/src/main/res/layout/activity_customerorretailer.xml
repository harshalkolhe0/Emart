<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customerorretailer"

    android:background="#82828b"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:text="    Customer        Retailer"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toTopOf="@+id/signin2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signin1"
        android:layout_width="161dp"
        android:layout_height="60dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="192dp"
        android:layout_marginStart="14dp"
        android:background="#46fde2"
        android:shadowColor="@android:color/black"
        android:text="Sign In"
        android:textColor="@android:color/white"

        app:layout_constraintBottom_toTopOf="@+id/signup1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/signin2"
        android:layout_width="161dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/signin1"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:background="#46fde2"

        android:shadowColor="@android:color/black"
        android:text="Sign In"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/signup2"
        app:layout_constraintEnd_toStartOf="@+id/signin1"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/signup1"
        android:layout_width="161dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/signin1"
        android:layout_marginBottom="108dp"
        android:background="#46fde2"
        android:shadowColor="@android:color/black"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin1"
        tools:layout_editor_absoluteY="280dp" />

    <Button
        android:id="@+id/signup2"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/signin2"
        android:layout_alignTop="@+id/signup1"
        android:background="#46fde2"
        android:shadowColor="@android:color/black"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/signup1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin2"
        tools:layout_editor_absoluteY="280dp" />
